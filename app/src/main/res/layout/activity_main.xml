<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textKey"
                android:gravity="center_horizontal"/>


            <ImageView
                android:id="@+id/imgKey"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                />

            <Button
                android:id="@+id/openKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnOpenKey"
                android:onClick="openKeyImage"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textEncrypted"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/imgEncrypt"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/openFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openInputImage"
                android:text="@string/textOpenFile" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/textToEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="10"
        android:text="@string/edtTextToEncrypt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDecipher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textDecipher" />

        <Button
            android:id="@+id/btnEncrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textEncrypt" />
    </LinearLayout>

</LinearLayout>